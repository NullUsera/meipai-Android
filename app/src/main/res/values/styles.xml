<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- 底部菜单对话框样式 -->
    <style name="dropDialog" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 底部菜单对话框动画 -->
    <style name="dialogPushUpInAnimation" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowEnterAnimation">@anim/drop_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/drop_dialog_exit</item>
    </style>

    <style name="normal_dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="normal_dialog.white">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="my_message_common" parent="@style/WrapMatch">
        <item name="android:background">#000</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="my_message_text" parent="WrapWrap">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="my_message_self_text" parent="WrapWrap">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="vertical_divide">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">#555</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
    </style>

    <!-- 拍摄短视频或拍摄图片 -->
    <style name="createStyle" parent="@style/WrapWrap">
        <item name="android:layout_marginLeft">@dimen/badge_corner_radius</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="horizontal_divide">
        <item name="android:background">#555</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="item_view_my_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

</resources>
